{
	"name":            "plugin-boilerplate",
	"version":         "1.0.0",
	"description":     "Wordpress plugin",
	"private":         true,
	"scripts":         {
		"build":            "webpack --progress --config webpack.config.js --mode=development",
		"build:production": "webpack --mode=production --progress --config webpack.config.js",
		"watch":            "webpack --watch --progress --config webpack.config.js --mode=development",
		"browsers-list":    "npx update-browserslist-db@latest",
		"release":          "standard-version",
		"zip":              "bestzip plugin-boilerplate.zip ../plugin-boilerplate/languages ../plugin-boilerplate/dist ../plugin-boilerplate/vendor ../plugin-boilerplate/src ../plugin-boilerplate/templates ../plugin-boilerplate/*.php ../plugin-boilerplate/README.md"
	},
	"repository":      {
		"type": "git",
		"url":  "git+https://github.com/viljuska/plugin-boilerplate.git"
	},
	"keywords":        [],
	"author":          "Stefan Jocić <stefan_jocic@hotmail.com> (https://www.linkedin.com/in/stefan-jocić)",
	"license":         "GPL-2.0-or-later",
	"engines":         {
		"node": ">=18",
		"npm":  ">=10"
	},
	"homepage":        "",
	"devDependencies": {
		"@babel/core":                         "^7.23.6",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env":                   "^7.23.6",
		"@babel/preset-react":                 "^7.23.3",
		"autoprefixer":                        "^10.4.16",
		"babel-loader":                        "^8.3.0",
		"bestzip":                             "^2.2.1",
		"clean-webpack-plugin":                "^4.0.0",
		"copy-webpack-plugin":                 "^9.1.0",
		"css-loader":                          "^5.2.7",
		"mini-css-extract-plugin":             "^1.6.2",
		"postcss":                             "^8.4.32",
		"postcss-combine-media-query":         "^1.0.1",
		"postcss-loader":                      "^5.3.0",
		"postcss-preset-env":                  "^7.8.3",
		"postcss-sort-media-queries":          "^4.4.1",
		"sass":                                "^1.69.6",
		"sass-loader":                         "^11.1.1",
		"standard-version":                    "^9.5.0",
		"style-loader":                        "^2.0.0",
		"webpack":                             "^5.89.0",
		"webpack-cli":                         "^4.10.0"
	},
	"dependencies":    {
		"regenerator-runtime": "^0.14.1"
	}
}
